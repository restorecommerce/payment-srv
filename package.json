{
  "name": "payment-srv",
  "version": "1.0.0",
  "description": "Restore Commerce Payment Gateway (RCPG) Microservice client.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/payment-srv.git"
  },
  "author": "n-fuse GmbH",
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "payment",
    "srv"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "^1.2.2",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/grpc-client": "^2.0.1",
    "@restorecommerce/kafka-client": "^1.0.10",
    "@restorecommerce/logger": "^1.2.1",
    "@restorecommerce/protos": "^3.1.2",
    "@restorecommerce/rc-grpc-clients": "^3.1.2",
    "@restorecommerce/service-config": "^1.0.5",
    "child_process": "^1.0.2",
    "redis": "^4.6.7",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@types/koa": "^2.13.6",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.2",
    "@types/redis": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "express": "^4.18.2",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "puppeteer": "20.5.0",
    "rimraf": "^5.0.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "lint": "eslint src --ext .ts",
    "start": "npm run createtopics && node lib/index.js",
    "build": "npm run build:tsc",
    "build:tsc": "tsc -d --sourceMap",
    "build:tsc:watch": "tsc -d --sourceMap --watch",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/**/*.ts' --exec 'ts-node' src/worker.ts",
    "tsdev": "ts-node-dev --no-notify --respawn --transpileOnly ./src",
    "tsdev:nocluster": "ts-node-dev --no-notify --respawn --transpileOnly ./src/worker.ts",
    "pretest": "npm run createtopics",
    "test": "npm run pretest && nyc npm run mocha --timeout=5000",
    "mocha": "cross-env NODE_ENV=test mocha --timeout 15000 -r ts-node/register -R spec ./test/*.spec.ts --full-trace --exit",
    "createtopics": "node setupTopics.js io.restorecommerce.command",
    "lcov-report": "nyc report --reporter=lcov"
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
