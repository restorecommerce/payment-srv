{
  "name": "payment-srv",
  "version": "0.0.3",
  "description": "Restore Commerce Payment Gateway (RCPG) Microservice client.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/payment-srv.git"
  },
  "author": "n-fuse GmbH",
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "payment",
    "srv"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "^0.3.2",
    "@restorecommerce/cluster-service": "^0.1.10",
    "@restorecommerce/grpc-client": "^0.2.10",
    "@restorecommerce/kafka-client": "^0.2.23",
    "@restorecommerce/logger": "^0.10.8",
    "@restorecommerce/protos": "^0.4.7",
    "@restorecommerce/service-config": "^0.4.18",
    "child_process": "^1.0.2",
    "redis": "^3.1.2",
    "util": "^0.12.4"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/lodash": "^4.14.176",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.4",
    "@types/puppeteer": "^5.4.4",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "express": "^4.17.1",
    "grpc-mock": "^0.7.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.18",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "puppeteer": "^10.4.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "lint": "eslint src --ext .ts",
    "start": "npm run createtopics && node lib/index.js",
    "build": "npm run build:tsc",
    "build:tsc": "tsc -d --sourceMap",
    "build:tsc:watch": "tsc -d --sourceMap --watch",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/**/*.ts' --exec 'ts-node' src/worker.ts",
    "tsdev": "ts-node-dev --no-notify --respawn --transpileOnly ./src",
    "tsdev:nocluster": "ts-node-dev --no-notify --respawn --transpileOnly ./src/worker.ts",
    "pretest": "npm run build && npm run tsctests && npm run createtopics",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run pretest && nyc npm run mocha --timeout=5000",
    "mocha": "cross-env NODE_ENV=test mocha --timeout 15000 -R spec tests/test.js --full-trace --exit",
    "createtopics": "node setupTopics.js io.restorecommerce.command",
    "lcov-report": "nyc report --reporter=lcov"
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
